<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="system" method="upgrade">
	<name>plg_system_httpheader</name>
	<creationDate>01.10.2017</creationDate>
	<author>Tobias Zulauf</author>
	<copyright>(C) 2017 Tobias Zulauf All rights reserved.</copyright>
	<authorUrl>https://www.jah-tz.de</authorUrl>
	<version>1.0.0</version>
	<license>GNU/GPL Version 2 or later</license>
	<description>PLG_SYSTEM_HTTPHEADER_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<files>
		<folder>language</folder>
		<folder>subform</folder>
		<filename plugin="httpheader">httpheader.php</filename>
	</files>
	<updateservers>
		<server type="extension" name="HttpHeader Update Site">
			https://raw.githubusercontent.com/zero-24/plg_system_httpheader/master/update.xml
		</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="save_note_handler"
						type="hidden"
						default="1"
				/>
				<field
						name="save_note"
						type="note"
						class="alert alert-error"
						description="PLG_SYSTEM_HTTPHEADER_SAVE_NOTE"
						showon="save_note_handler:1"
				/>
				<field
						name="intro_note"
						type="note"
						class="alert alert-success"
						description="PLG_SYSTEM_HTTPHEADER_INTRO_NOTE"
				/>
			</fieldset>
			<fieldset name="xcontenttypeoptions_subform">
				<field
						name="xcontenttypeoptions_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/xcontenttypeoptions.xml"
				/>
			</fieldset>
			<fieldset name="xframeoptions_subform">
				<field
						name="xframeoptions_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/xframeoptions.xml"
				/>
			</fieldset>
			<fieldset name="referrerpolicy_subform">
				<field
						name="referrerpolicy_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/referrerpolicy.xml"
				/>
			</fieldset>
			<fieldset name="xxssprotection_subform">
				<field
						name="xxssprotection_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/xxssprotection.xml"
				/>
			</fieldset>
			<fieldset name="hsts_subform">
				<field
						name="hsts_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/hsts.xml"
				/>
			</fieldset>
			<fieldset name="contentsecuritypolicy_subform">
				<field
						name="contentsecuritypolicy_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/contentsecuritypolicy.xml"
				/>
			</fieldset>
			<fieldset name="additional_httpheader_subform">
				<field
						name="additional_httpheader_subform"
						type="subform"
						label=""
						formsource="/plugins/system/httpheader/forms/additionalhttpheader.xml"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
