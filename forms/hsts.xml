<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
			name="hsts_note"
			type="note"
			class="alert alert-info"
			description="PLG_SYSTEM_HTTPHEADER_HSTS_NOTE_DESC"
	/>
	<field
			name="hsts"
			type="radio"
			class="btn-group btn-group-yesno"
			label="PLG_SYSTEM_HTTPHEADER_HSTS"
			description="PLG_SYSTEM_HTTPHEADER_HSTS_DESC"
			default="0"
	>
		<option value="1">JENABLED</option>
		<option value="0">JDISABLED</option>
	</field>
	<field
			name="hsts_maxage"
			type="text"
			label="PLG_SYSTEM_HTTPHEADER_HSTS_MAXAGE"
			description="PLG_SYSTEM_HTTPHEADER_HSTS_MAXAGE_DESC"
			default="300"
			showon="hsts:1"
	/>
	<field
			name="hsts_subdomains"
			type="radio"
			class="btn-group btn-group-yesno"
			label="PLG_SYSTEM_HTTPHEADER_HSTS_SUBDOMAINS"
			default="0"
			showon="hsts:1"
	>
		<option value="1">JENABLED</option>
		<option value="0">JDISABLED</option>
	</field>
	<field
			name="hsts_subdomains_note"
			type="note"
			class="alert alert-info"
			description="PLG_SYSTEM_HTTPHEADER_HSTS_SUBDOMAINS_NOTE_DESC"
			showon="hsts:1"
	/>
	<field
			name="hsts_preload"
			type="radio"
			label="PLG_SYSTEM_HTTPHEADER_HSTS_PRELOAD"
			class="btn-group btn-group-yesno"
			default="0"
			showon="hsts:1"
	>
		<option value="1">JENABLED</option>
		<option value="0">JDISABLED</option>
	</field>
	<field
			name="hsts_preload_note"
			type="note"
			label="PLG_SYSTEM_HTTPHEADER_HSTS_PRELOAD_NOTE"
			description="PLG_SYSTEM_HTTPHEADER_HSTS_PRELOAD_NOTE_DESC"
			class="alert"
			showon="hsts:1"
	/>
</form>